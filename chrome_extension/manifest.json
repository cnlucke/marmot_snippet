{
  "name": "Marmot Shopping Cart",
  "version": "1.0",
  "description": "See cart info from main page!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/marmot_icon16.png",
      "48": "images/marmot_icon48.png",
      "128": "images/marmot_icon128.png"
    }
  },
  "icons": {
    "16": "images/marmot_icon16.png",
    "48": "images/marmot_icon48.png",
    "128": "images/marmot_icon128.png"
  },
  "manifest_version": 2
}
